<?xml version="1.0" encoding="utf-8"?>
<Window xmlns:x="http://www.w3.org/2001/XMLSchema-instance" x:type="MediaPortalWindow">
  <IsDefault>true</IsDefault>
  <Width>1280</Width>
  <Height>720</Height>
  <Name>Plain</Name>
  <Id>0</Id>
  <BackgroundBrush />
  <WindowAnimations />
  <WindowControls>
    <Control x:type="Image">
      <Name>Background</Name>
      <Id>1</Id>
      <Width>1280</Width>
      <Height>720</Height>
      <VisibleCondition />
      <Animations />
      <MediaPortalFocusControls />
      <ImageStyle StyleId="Background" />
      <ImageStretch>None</ImageStretch>
      <CoverCornerRadius>0,0,0,0</CoverCornerRadius>
    </Control>
    <Control x:type="Label">
      <Name>CurrentModule</Name>
      <Id>7</Id>
      <Width>1280</Width>
      <Height>70</Height>
      <PosY>650</PosY>
      <VisibleCondition />
      <Animations />
      <MediaPortalFocusControls />
